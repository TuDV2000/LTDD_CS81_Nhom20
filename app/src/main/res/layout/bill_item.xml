<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    android:backgroundTint="#CBE6F3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp">

        <TextView
            android:id="@+id/tv_mdh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng: "
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_bill_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/tv_mdh"/>

        <TextView
            android:id="@+id/tv_bill_day_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10-10-2020"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tv_bill_id"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền:"
            android:textSize="18dp"
            android:layout_toLeftOf="@+id/tv_bill_total"
            android:layout_below="@+id/tv_bill_id"/>

        <TextView
            android:id="@+id/tv_bill_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100000"
            android:textSize="18dp"
            android:layout_marginHorizontal="10dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_bill_id"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>