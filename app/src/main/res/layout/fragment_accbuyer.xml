<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textSize="30dp"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Huynh Nguyen Bac Giang"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1851050037giang@ou.edu.vn"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/edt_addressEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1851050037giang@ou.edu.vn"
            android:textSize="24dp"
            android:textStyle="bold"
            android:enabled="false"
            android:layout_gravity="center"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/edt_phoneEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1851050037"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:enabled="false"
            android:background="@null"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_editAcc"
        android:layout_marginTop="20dp"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Chỉnh sửa"
        android:textSize="25dp"
        android:backgroundTint="#6495ED"
        android:enabled="false" />
    <Button
        android:id="@+id/btn_saveEdit"
        android:layout_marginTop="20dp"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Lưu"
        android:textSize="25dp"
        android:backgroundTint="#6495ED"
        android:enabled="false"
        android:alpha="0.0"/>
    <Button
        android:id="@+id/btn_logOut"
        android:layout_marginTop="60dp"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Đăng xuất"
        android:textSize="25dp"
        android:backgroundTint="#ED646F"/>
    
</LinearLayout>