<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetailActivity"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_detail_book"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="-7dp"
            android:background="@drawable/book1" />

        <TextView
            android:id="@+id/tv_detail_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vuot qua tat ca"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_toRightOf="@+id/iv_detail_book"/>

        <TextView
            android:id="@+id/tv_detail_book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100000đ"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_toRightOf="@+id/iv_detail_book"
            android:layout_below="@+id/tv_detail_book_name"/>

        <TextView
            android:id="@+id/tview_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@+id/iv_detail_book"/>
        <ScrollView
            android:id="@+id/scv_detail_book_describe"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/tview_detail">
            <TextView
                android:id="@+id/tv_detail_book_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </ScrollView>
        <TextView
            android:id="@+id/tv_soLuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/scv_detail_book_describe"
            android:text="Số lượng"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/tv_bookquantities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40dp"
            android:layout_below="@id/tv_soLuong"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/btn_detail_minus_detail"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:text="-"
            android:textStyle="bold"
            android:backgroundTint="#00BCD4"
            android:layout_below="@id/tv_soLuong"
            android:layout_toRightOf="@id/tv_bookquantities"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/btn_detail_plus_detail"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:text="+"
            android:layout_toLeftOf="@id/tv_bookquantities"
            android:layout_marginRight="20dp"
            android:backgroundTint="#00BCD4"
            android:layout_below="@id/tv_soLuong" />
        <Button
            android:id="@+id/btn_describe_addcart"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:text="thêm vào giỏ hàng"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#D42000"/>

    </RelativeLayout>
</LinearLayout>